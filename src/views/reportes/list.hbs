<div class="container p-4">
    <div class="row">
        {{#each reportes}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">
                            <h3 class="card-title text-uppercase">
                                {{titulo}}
                            </h3>
                            
                        </a>
                        <p class="m-2">{{descripcion}}</p>
                        <p>{{timeago fecha}}</p>
                        <a href="/reportes/delete/{{id}}" class="btn btn-danger">Borrar Reporte</a>
                        <a href="/reportes/edit/{{id}}" class="btn btn-secondary">Editar Reporte</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes ningun reporte</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>